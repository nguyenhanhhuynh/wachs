@model SearchProvider;

@{
    ViewData["Title"] = "Search Providers";
}
<h1>@ViewData["Title"]</h1>
<div class="col-8">
    <form method="post" asp-controller="Home" asp-action="Providers">
        <label for="Practice">Practice:</label>
        <input type="text" class="form-control" name="PracticeName" />

        <input type="submit" value="Submit" />
    </form>
</div>
@if (Model != null && Model.Providers != null)
{
    <h3>List Providers by Practice @Model.Practice</h3>
    <ul>
        @foreach (var item in Model.Providers)
        {
            <li>@item.Name</li>
        }
    </ul>
}
<div class="col-8">

</div>
