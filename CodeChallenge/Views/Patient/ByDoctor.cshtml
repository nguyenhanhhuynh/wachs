@model CodeChallenge.ViewModels.SearchPatient;

@{
    ViewData["Title"] = "Search Providers";
}
<h1>@ViewData["Title"]</h1>
<div>
    <form method="post" asp-controller="Patient" asp-action="ByDoctor">
        <label for="providerName">Doctor:</label>
        <input type="text" class="form-control" name="providerName" />

        <input type="submit" value="Submit" />
    </form>
</div>
@if (Model != null && Model.MedicalReferenceNos != null)
{
    <h3>List Patients'Medical Reference Numbers  by Practice @Model.ProviderName</h3>
    <ul>
        @foreach (var item in Model.MedicalReferenceNos)
        {
            <li>@item</li>
        }
    </ul>
}
